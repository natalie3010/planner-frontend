{
  "supplyForm": {
    "inputs": {
      "applicantFirstName": {
        "validators": [
          {
            "errorDisplayed": "Please put a first name",
            "required": true
          }
        ]
      },
      "applicantLastName": {
        "validators": [
          {
            "errorDisplayed": "Please put a last name",
            "required": true
          }
        ]
      },
      "applicantStatus": {
        "validators": [
          {
            "errorDisplayed": "Please select a status",
            "required": true
          }
        ]
      },
      "applicantSkills": {
        "validators": [
          {
            "errorDisplayed": "Please select a skill",
            "required": true
          }
        ]
      },
      "applicantNotes": {
        "validators": [
          {
            "required": false
          }
        ]
      },
      "applicantType": {
        "validators": [
          {
            "errorDisplayed": "Please select a type",
            "required": true
          }
        ]
      },
      "applicantLocation": {
        "validators": [
          {
            "required": false
          }
        ]
      }
    }
  },

  "demandForm": {
    "inputs": {
      "demandCodeRequisition": {
        "validators": [{ "required": false }]
      },
      "demandStartDate": {
        "validators": [
          {
            "required": true,
            "errorDisplayed": "Please put a valid date following the pattern dd/MM/yyyy",
            "pattern": "(([12][0-9]{1})|(0[1-9]{1})|(3[01]{1}))\\/((0[1-9])|(1[012]))\\/(2([0-9]{3}))"
          }
        ]
      },
      "demandOriginatorName": {
        "validators": [{ "required": false }]
      },
      "demandProbability": {
        "validators": [{ "required": false }]
      },
      "demandSelectedApplicant": {
        "validators": [{ "required": false }]
      },
      "demandNotes": {
        "validators": [{ "required": false }]
      },
      "demandProposedApplicant": {
        "validators": [{ "required": false }]
      },
      "demandCreationDate": {
        "validators": [
          {
            "errorDisplayed": "Please put a valid date following the pattern dd/MM/yyyy",
            "required": true,
            "pattern": "(([12][0-9]{1})|(0[1-9]{1})|(3[01]{1}))\\/((0[1-9])|(1[012]))\\/(2([0-9]{3}))"
          }
        ]
      },
      "demandLocation": {
        "validators": [{ "required": false }]
      },
      "demandSkills": {
        "validators": [{ "required": true }]
      },
      "demandGrade": {
        "validators": [{ "required": true }]
      },
      "demandStatus": {
        "validators": [{ "required": true }]
      },
      "demandClientID": {
        "validators": [
          {
            "errorMessage": "Please select a client",
            "required": true
          }
        ]
      }
    }
  },
  "loginForm": {
    "inputs": {
      "usernameLogin": {
        "validators": [
          {
            "required": true
          }
        ]
      },
      "passwordLogin": {
        "validators": [
          {
            "required": true
          }
        ]
      }
    }
  },

  "addClientForm": {
    "inputs": {
      "clientID": {
        "validators": [
          {
            "errorDisplayed": "Please put in a Client ID",
            "required": true
          }
        ]
      },
      "clientName": {
        "validators": [
          {
            "errorDisplayed": "Please put in a Client Name",
            "required": true
          }
        ]
      }
    }
  }
}
